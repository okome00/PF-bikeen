<!-- 投稿一覧画面 -->
<div class="post-wrap">
  <div class="post-content d-flex">
    <% @posts.each do |post| %>
      <div class="card" style="width: 18rem;">
        <%= link_to post_path(post.id) do %>
          <% if post.images.attached? %>
            <%= image_tag post.images[0], class: "card-img-top" %>
          <% end %>
          <% if post.movie.attached? %>
            <%= video_tag rails_blob_path(post.movie), size: '100*100' %>
          <% end %>
          <div class="card-body">
            <span><i class="fas fa-heart mr-2" style="color: #EF4868;"></i><strong style="color: #000;"><%= post.favorites.count %></strong></span>
            <span><i class="fas fa-comments ml-3 mr-2" style="color: #000;"></i><strong style="color: #000;"><%= post.post_comments.count %></strong></span>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
